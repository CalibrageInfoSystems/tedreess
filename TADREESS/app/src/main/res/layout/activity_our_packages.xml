<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.OurPackages">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/relFirst"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary">


            <ImageView
                android:id="@+id/imgMenu"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:src="@drawable/menu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgMenu"
                android:paddingLeft="20dp"
                android:text="Our Packages"
                android:textColor="#ffffff"
                android:textSize="15dp" />


            <ImageView
                android:id="@+id/imgSearch"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="18dp"
                android:src="@drawable/search" />

        </RelativeLayout>





        <RelativeLayout
            android:id="@+id/relSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relFirst">


            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/student_profile" />


            <RelativeLayout
                android:id="@+id/relThired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/imgProfile"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtStudentName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnStage"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/txtStudentName"
                    android:background="#8BC34A"
                    android:text="Stage"
                    android:textColor="#ffffff" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/txtStudentName"
                    android:layout_toRightOf="@+id/btnStage"
                    android:background="@color/colorPrimary"
                    android:text="Eight"
                    android:textColor="#ffffff" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relThired"
                android:layout_marginTop="30dp"
                android:background="#59000000" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relSecond">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relFirst"
            android:background="#8BC34A"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtMyProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textSize="12dp"
                    android:text="My Profile"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/txtMySchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textSize="12dp"
                    android:text="My Schedule"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_height="1dp"/>



                <TextView
                    android:id="@+id/txtMyAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textSize="12dp"
                    android:text="My Account"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_height="1dp"/>


                <TextView
                    android:id="@+id/txtChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textSize="12dp"
                    android:text="Change Password"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_height="1dp"/>


                <TextView
                    android:id="@+id/txtAboutUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textSize="12dp"
                    android:text="About Us"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_height="1dp"/>


                <TextView
                    android:id="@+id/txtFaq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textSize="12dp"
                    android:text="Faq"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/txtServices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textSize="12dp"
                    android:text="Services"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/txtContactUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textSize="12dp"
                    android:text="Contact Us"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/txtLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textSize="12dp"
                    android:text="Logout"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_height="1dp"/>

            </LinearLayout>

        </RelativeLayout>



    </RelativeLayout>


    <ProgressBar
        android:id="@+id/bar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />


</RelativeLayout>