<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterSecretKey">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <RelativeLayout
            android:id="@+id/relFirst"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#1a237e"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:src="@drawable/backicon"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activation"
                android:textColor="#fff"
                android:layout_toRightOf="@+id/imgBack"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>


        </RelativeLayout>




<RelativeLayout
    android:layout_below="@+id/relFirst"
    android:layout_width="match_parent"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/txt"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Welcome User"
        android:textSize="20dp"
        android:layout_marginTop="150dp"
        android:textStyle="bold"
        android:textColor="#4CAF50"/>


<View
    android:id="@+id/view"
    android:layout_below="@+id/txt"
    android:layout_width="140dp"
    android:background="#4CAF50"
    android:layout_height="1dp"/>

    <TextView
        android:id="@+id/txtSecret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="please enter your secret key"
        android:textSize="12dp"
        android:layout_below="@+id/view"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="#4CAF50"/>
    
    
    
    <EditText
        android:id="@+id/edtKey"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/txtSecret"
        android:background="@drawable/edit_back"/>
    
<Button
    android:id="@+id/btnSubmit"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/edtKey"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:textColor="#ffffff"
    android:background="@color/colorPrimary"
    android:text="Submit"/>

   <!-- <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/btnSubmit"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="#4FFFFFFF"
        android:text="Logout"/>-->

</RelativeLayout>













    </RelativeLayout>

    <ProgressBar
        android:id="@+id/Pbar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>


</RelativeLayout>